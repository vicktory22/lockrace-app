{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "module": "Node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules"]
}
